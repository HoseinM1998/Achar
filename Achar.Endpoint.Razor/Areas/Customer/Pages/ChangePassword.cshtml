@page
@model Achar.Endpoint.Razor.Areas.Customer.Pages.ChangePasswordModel
@{
    ViewData["Title"] = "تغییر رمز عبور";
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}
<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg border-0 rounded">
                <div class="card-body p-4">
                    <h3 class="text-center text-primary mb-4">
                        <i class="fas fa-lock"></i> تغییر رمز عبور
                    </h3>

                    <form method="post" asp-page-handler="ChangePassword" novalidate>
                        <div asp-validation-summary="ModelOnly" class="text-danger p-3 rounded bg-light" role="alert"></div>

                        <div class="mb-3">
                            <label for="OldPassword" class="form-label fw-bold">
                                رمز عبور فعلی <span class="text-danger">*</span>
                            </label>
                            <input type="password" id="OldPassword" asp-for="Password.OldPassword"
                                   class="form-control" required/>
                            <span class="text-danger" asp-validation-for="Password.OldPassword"></span>
                        </div>

                        <div class="mb-3">
                            <label for="newPassword" class="form-label fw-bold">
                                رمز عبور جدید <span class="text-danger">*</span>
                            </label>
                            <input type="password" id="newPassword" asp-for="Password.NewPassword"
                                   class="form-control" required/>
                            <span class="text-danger" asp-validation-for="Password.NewPassword"></span>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-success fw-bold">
                                <i class="fas fa-check"></i> تغییر رمز
                            </button>
                            <a asp-page="/Index" class="btn btn-outline-secondary">
                                <i class="fas fa-arrow-left"></i> بازگشت
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
