@page
@model Achar.Endpoint.Razor.Areas.Admin.Pages.Users.IndexModel
@{
    ViewData["Title"] = "آچار > مدیریت کاربران > لیست کاربران";
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}
@if (TempData["Success"] != null)
{
    <div class="alert alert-success">
        @TempData["Success"]
    </div>
}

<div class="col-lg-12">
    <div class="portlet box shadow">
        <div class="portlet-heading">
            <div class="portlet-title">
                <h3 class="title">
                    کاربران
                </h3>
            </div>
        </div>
        <div class="portlet-body">
            <div class="top-buttons-box mb-2">
                <a class="btn btn-success" asp-page="Create">
                    <i class="icon-plus"></i>
                    افزودن کاربر
                    <div class="paper-ripple">
                        <div class="paper-ripple__background"></div>
                        <div class="paper-ripple__waves"></div>
                    </div>
                </a>
                <a class="btn btn-success" asp-page="CreateAdmin">
                    <i class="icon-plus"></i>
                    افزودن مدیر
                    <div class="paper-ripple">
                        <div class="paper-ripple__background"></div>
                        <div class="paper-ripple__waves"></div>
                    </div>
                </a>
            </div>

            <div class="row mb-4">
                <h4>مدیرها</h4>
                <div class="col-12 table-responsive" style="overflow-x: hidden;">
                    <table class="table table-bordered table-hover table-striped">
                        <thead>
                            <tr>
                                <th class="w-10">پروفایل</th>
                                <th class="w-10">نام</th>
                                <th class="w-10">نام خانوادگی</th>
                                <th class="w-10">نام کاربری</th>
                                <th class="w-10">موبایل</th>
                                <th class="w-15">ایمیل</th>
                                <th class="w-10">موجودی</th>
                                <th class="w-15">عملیات</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var admin in @Model.Admin)
                            {
                                <tr>
                                    <td><img style="border-radius: 50%" src="@(string.IsNullOrEmpty(admin.ApplicationUser.ProfileImageUrl) ?  "~/userassets/img/1.png" : admin.ApplicationUser.ProfileImageUrl)" width="50" height="50" /></td>
                                    <td>@admin.ApplicationUser.FirstName</td>
                                    <td>@admin.ApplicationUser.LastName</td>
                                    <td>@admin.ApplicationUser.UserName</td>
                                    <td>@admin.ApplicationUser.PhoneNumber</td>
                                    <td>@admin.ApplicationUser.Email</td>
                                    <td>@admin.ApplicationUser.Balance.ToString("N0")تومان</td>
                                    <td>
                                        <a asp-page="AdminUp" asp-route-id="@admin.Id" class="btn btn-info">ویرایش</a>
                                        <a asp-page="DeleteUser" asp-route-id="@admin.Id" asp-route-userType="Admin" class="btn btn-danger">حذف</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>

            <div class="row mb-4">
                <h4>مشتریان</h4>
                <div class="col-12 table-responsive" style="overflow-x: hidden;">
                    <table class="table table-bordered table-hover table-striped">
                        <thead>
                            <tr>
                                <th class="w-10">پروفایل</th>
                                <th class="w-10">نام</th>
                                <th class="w-10">نام خانوادگی</th>
                                <th class="w-10">نام کاربری</th>
                                <th class="w-10">موبایل</th>
                                <th class="w-15">ایمیل</th>
                                <th class="w-10">شهر</th>
                                <th class="w-10">موجودی</th>
                                <th class="w-15">عملیات</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var customer in @Model.Customer)
                            {
                                <tr>
                                    <td><img style="border-radius: 50%" src="@(string.IsNullOrEmpty(customer.ProfileImageUrl) ?  "~/userassets/img/1.png" : customer.ProfileImageUrl)" width="50" height="50" /></td>
                                    <td>@customer.FirstName</td>
                                    <td>@customer.LastName</td>
                                    <td>@customer.UserName</td>
                                    <td>@customer.PhoneNumber</td>
                                    <td>@customer.Email</td>
                                    <td>@customer.NameCity</td>
                                    <td>@customer.Balance.ToString("N0")تومان</td>
                                    <td>
                                        <a asp-page="CustomerUp" asp-route-id="@customer.Id" class="btn btn-info">ویرایش</a>
                                        <a asp-page="DeleteUser" asp-route-id="@customer.Id" asp-route-userType="Customer" class="btn btn-danger">حذف</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>

            <div class="row mb-4">
                <h4>کارشناسان</h4>
                <div class="col-12 table-responsive" style="overflow-x: auto;">
                    <table class="table table-bordered table-hover table-striped">
                        <thead>
                            <tr>
                                <th class="w-10">عکس</th>
                                <th class="w-10">نام</th>
                                <th class="w-10">نام خانوادگی</th>
                                <th class="w-10">نام کاربری</th>
                                <th class="w-15">ایمیل</th>
                                <th class="w-10">شماره تلفن</th>
                                <th class="w-10">جنسیت</th>
                                <th class="w-10">شهر</th>
                                <th class="w-10">وضعیت</th>
                                <th class="w-10">موجودی</th>
                                <th class="w-15">مهارت ها</th>
                                <th class="w-20">عملیات</th> 
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var expert in Model.Expert)
                            {
                                <tr>
                                    <td>@expert.Id</td>
                                    <td><img style="border-radius: 50%" src="@(string.IsNullOrEmpty(expert.ProfileImageUrl) ? "~/userassets/img/1.png" : expert.ProfileImageUrl)" width="50" height="50" /></td>
                                    <td>@expert.FirstName</td>
                                    <td>@expert.LastName</td>
                                    <td>@expert.UserName</td>
                                    <td>@expert.Email</td>
                                    <td>@expert.PhoneNumber</td>
                                    <td>@expert.Gender</td>
                                    <td>@expert.NameCity</td>
                                    <td>@(expert.IsActive ? "فعال" : "غیرفعال")</td>
                                    <td>@expert.Balance.ToString("N0")تومان</td>
                                    <td>
                                        @if (expert.Skills != null && expert.Skills.Any())
                                        {
                                            <ul>
                                                @foreach (var skill in expert.Skills)
                                                {
                                                    <li>@skill.Title</li>
                                                }
                                            </ul>
                                        }
                                        else
                                        {
                                            <span>بدون مهارت</span>
                                        }
                                    </td>
                                    <td>
                                        <a asp-page="ExpertUp" asp-route-id="@expert.Id" class="btn btn-info">ویرایش</a>
                                        <a asp-page="DeleteUser" asp-route-id="@expert.Id" asp-route-userType="Expert" class="btn btn-danger">حذف</a>
                                        <form method="post" asp-page-handler="ChangeExpertStatus" style="display:inline;">
                                            <input type="hidden" name="id" value="@expert.Id" />
                                            <input type="hidden" name="isActive" value="@(expert.IsActive ? "false" : "true")" />
                                            <button type="submit" class="btn @(expert.IsActive ? "btn-warning" : "btn-success")">
                                                @(expert.IsActive ? "غیرفعال کردن" : "فعال کردن")
                                            </button>
                                        </form>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts
{
    <script src="~/AdminTemplate/plugins/data-table/js/jquery.dataTables.min.js"></script>
    <script src="~/AdminTemplate/js/pages/datatable.js"></script>
}

<style>
    .portlet {
        margin-bottom: 20px;
    }

    .portlet-heading {
        background-color: #f8f9fa;
        padding: 10px;
        border-bottom: 1px solid #ddd;
    }

    .portlet-title {
        margin: 0;
    }

    .table-responsive {
        overflow-x: auto;
    }

    .table {
        width: 100%;
        margin-bottom: 1rem;
        color: #212529;
    }

        .table th, .table td {
            padding: 0.5rem;
            vertical-align: middle;
            border-top: 1px solid #dee2e6;
        }

        .table thead th {
            vertical-align: bottom;
            border-bottom: 2px solid #dee2e6;
        }

    .table-striped tbody tr:nth-of-type(odd) {
        background-color: rgba(0, 0, 0, 0.05);
    }

    .table-hover tbody tr:hover {
        background-color: rgba(0, 0, 0, 0.075);
    }

    .btn {
        margin: 2px;
    }

    .table td, .table th {
        white-space: nowrap;
    }
</style>