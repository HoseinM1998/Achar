@page
@model Achar.Endpoint.Razor.Pages.ServiceModel
@{
    var homeService = Model.HomeService;
}

<section class="gray py-5 position-relative">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-xl-8 col-lg-8 col-md-12">
                <div class="bg-white rounded shadow-sm p-4">
                    <h4 class="text-primary fw-bold mb-3">جزئیات خدمات</h4>
                    <div class="text-center mb-4">
                        @if (!string.IsNullOrWhiteSpace(homeService.ImageSrc))
                        {
                            <img src="@homeService.ImageSrc" class="img-fluid rounded" alt="@homeService.Title" width="400" height="400" />
                        }
                        else
                        {
                            <p class="text-muted">تصویری موجود نیست</p>
                        }
                    </div>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item"><strong>عنوان:</strong> @homeService.Title</li>
                        <li class="list-group-item"><strong>دسته‌بندی:</strong> @homeService.CategoryName</li>
                        <li class="list-group-item"><strong>توضیحات:</strong> @homeService.Description</li>
                        <li class="list-group-item"><strong>قیمت پایه:</strong> <span class="text-success">@homeService.BasePrice.ToString("N0") تومان</span></li>
                    </ul>
                    <div class="text-center mt-4">
                        <a asp-area="Customer" asp-page="/Request" asp-route-id="@homeService.Id" class="btn btn-primary btn-lg">ثبت درخواست</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="bg-white py-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-xl-8 col-lg-8 col-md-12">
                <div class="rounded shadow-sm p-4">
                    <h4 class="text-primary fw-bold mb-3">آدرس و زمان سرویس دهی</h4>
                    <iframe src="https://www.google.com/maps/embed?..." width="100%" height="250" class="rounded mb-3" style="border:0;" allowfullscreen loading="lazy"></iframe>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item"><strong>مکان:</strong> تهران</li>
                        <li class="list-group-item"><strong>خیابان:</strong> طالقانی</li>
                        <li class="list-group-item"><strong>نشانی دقیق:</strong> خیابان سپهبد قرنی، رستوران ماهان</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</section>

