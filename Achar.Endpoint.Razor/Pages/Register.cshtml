@page
@model RegisterModel
@{
    Layout = "_Layout";
}

<section class="gray min-vh-100 d-flex align-items-center">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-xl-6 col-lg-8 col-md-10">
                <div class="card shadow-lg border-0 p-4 rounded-4">
                    <div class="text-center mb-4">
                        <h4 class="fw-bold text-primary">ثبت نـام</h4>
                    </div>

                    <form class="submit-form" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger p-3 rounded bg-light" role="alert"></div>

                        <div class="mb-3">
                            <label asp-for="@Model.AccountRegister.UserName" class="form-label fw-semibold">نام کاربری</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="bi bi-person"></i></span>
                                <input type="text" asp-for="@Model.AccountRegister.UserName" class="form-control rounded-end">
                            </div>
                            <span asp-validation-for="@Model.AccountRegister.UserName" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="@Model.AccountRegister.Password" class="form-label fw-semibold">رمز عبور</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="bi bi-lock"></i></span>
                                <input type="password" asp-for="@Model.AccountRegister.Password" class="form-control rounded-end">
                            </div>
                            <span asp-validation-for="@Model.AccountRegister.Password" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label class="fw-semibold">انتخاب شهر محل سکونت</label>
                            <select class="form-select" asp-for="@Model.AccountRegister.CityId">
                                @foreach (var item in Model.Cities)
                                {
                                    <option value="@item.Id">@item.Title</option>
                                }
                            </select>
                        </div>

                        <div class="d-flex justify-content-between mb-3">
                            <div class="form-check">
                                <input asp-for="@Model.AccountRegister.IsCustomer" id="customer" class="form-check-input" type="checkbox" checked>
                                <label for="customer" class="form-check-label">مشتری</label>
                            </div>
                            <div class="form-check">
                                <input asp-for="@Model.AccountRegister.IsExpert" id="expert" class="form-check-input" type="checkbox">
                                <label for="expert" class="form-check-label">کارشناس</label>
                            </div>
                        </div>

                        <button type="submit" class="btn btn-primary w-100 rounded-pill">ثبت نام</button>

                        <div class="text-center mt-3">
                            <p>آیا قبلا ثبت نام کرده‌اید؟ <a asp-page="./Login" class="text-decoration-none text-success">ورود</a></p>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('.form-check-input').click(function () {
                $('.form-check-input').not(this).prop('checked', false);
            });
        });
    </script>
}
