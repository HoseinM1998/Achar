@page
@model RegisterModel
@{
    Layout = "_Layout";
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}

<section class="gray min-vh-100 d-flex align-items-center justify-content-center" style="padding-top: 50px;">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-xl-6 col-lg-8 col-md-10">
                <div class="card shadow-lg border-0 p-4 rounded-4">
                    <div class="text-center mb-4">
                        <h4 class="fw-bold text-primary">ثبت نـام</h4>
                    </div>

                    <form class="submit-form" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger p-3 rounded bg-light" role="alert"></div>

                        <div class="mb-3">
                            <label asp-for="@Model.AccountRegister.UserName" class="form-label fw-semibold">نام کاربری</label>
                            <div class="input-group">
                                <span class="input-group-text border-0"><i class="bi bi-person"></i></span>
                                <input type="text" asp-for="@Model.AccountRegister.UserName" class="form-control">
                            </div>
                            <span asp-validation-for="@Model.AccountRegister.UserName" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="@Model.AccountRegister.Password" class="form-label fw-semibold">رمز عبور</label>
                            <div class="input-group">
                                <span class="input-group-text border-0"><i class="bi bi-lock"></i></span>
                                <input type="password" asp-for="@Model.AccountRegister.Password" class="form-control">
                            </div>
                            <span asp-validation-for="@Model.AccountRegister.Password" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="@Model.AccountRegister.ConfirmPassword" class="form-label fw-semibold">تکرار رمز عبور</label>
                            <div class="input-group">
                                <span class="input-group-text border-0"><i class="bi bi-lock"></i></span>
                                <input type="password" asp-for="@Model.AccountRegister.ConfirmPassword" class="form-control">
                            </div>
                            <span asp-validation-for="@Model.AccountRegister.ConfirmPassword" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label class="fw-semibold">انتخاب شهر محل سکونت</label>
                            <select class="form-select" asp-for="@Model.AccountRegister.CityId" required>
                                @foreach (var item in Model.Cities)
                                {
                                    <option value="@item.Id">@item.Title</option>
                                }
                            </select>
                        </div>

                        <div class="sign-controls form-group">
                            <div class="form-check">
                                <input id="IsVisitor" asp-for="@Model.AccountRegister.IsExpert" type="checkbox" class="form-check-input">
                                <label class="form-check-label" for="IsVisitor">متخصص هستید؟</label>
                            </div>
                        </div>

                        <button type="submit" class="btn btn-primary w-100 rounded-pill">ثبت نام</button>

                        <div class="text-center mt-3">
                            <p>آیا قبلا ثبت نام کرده‌اید؟ <a asp-page="./Login" class="text-decoration-none text-success">ورود</a></p>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

<style>
    .gray {
        background-color: #f8f9fa;
    }

    .card {
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .rounded-4 {
        border-radius: 1rem;
    }

    .btn-primary {
        background-color: #007bff;
        border: none;
    }

        .btn-primary:hover {
            background-color: #0056b3;
        }

    .rounded-pill {
        border-radius: 50rem;
    }

    .input-group-text {
        background-color: #007bff;
        color: white;
        border: none;
        padding-left: 0.75rem;
        padding-right: 0.75rem;
    }

    .form-label {
        margin-bottom: 0.5rem;
    }

    .form-check-input:checked {
        background-color: #007bff;
        border-color: #007bff;
    }
</style>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('.form-check-input').click(function () {
                $('.form-check-input').not(this).prop('checked', false);
            });
        });
    </script>
    <partial name="_ValidationScriptsPartial" />
}
