@page
@model Achar.Endpoint.Razor.Pages.HomeServiceModel
@{
    <!-- ============================ خدمات اصلی ================================== -->
    <section class="gray py-5">
        <div class="container">
            <div class="row">
                <div class="col-12" id="hotels">
                    <div class="row justify-content-center gx-3">
                        @foreach (var subcategory in Model.HomeServices)
                        {
                            <div class="col-xl-3 col-lg-4 col-md-6 col-sm-6 col-12 mb-3">
                                <div class="service-card shadow-sm p-3 text-center rounded">
                                    <a asp-page="/Service" asp-route-id="@subcategory.Id" class="service-link">
                                        <div class="service-image">
                                            @if (!string.IsNullOrEmpty(subcategory.ImageSrc))
                                            {
                                                <img src="@subcategory.ImageSrc" class="img-fluid rounded" alt="Category Image">
                                            }
                                            else
                                            {
                                                <span class="text-muted">بدون عکس</span>
                                            }
                                        </div>
                                        <div class="service-content mt-3">
                                            <h5 class="text-primary fw-bold">@subcategory.Title</h5>
                                            <p class="text-dark">📌 دسته‌بندی: @subcategory.CategoryName</p>
                                            <p class="text-muted">📝 @subcategory.ShortDescription</p>
                                            <h6 class="text-success fw-bold">💰 قیمت: @subcategory.BasePrice.ToString("N0") تومان</h6>
                                        </div>
                                    </a>
                                    <a asp-page="/Service" asp-route-id="@subcategory.Id" class="btn btn-outline-primary mt-2">مشاهده جزئیات</a>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- ======================= خبرنامه ============================ -->
    <section class="newsletter bg-dark text-light py-5">
        <div class="container text-center">
            <h6>📩 عضویت در خبرنامه</h6>
            <h3 class="fw-bold">دریافت به‌روز‌رسانی‌ها و پیشنهادات ویژه</h3>
            <div class="newsletter-form mt-4">
                <form class="d-flex justify-content-center">
                    <input type="email" class="form-control w-50 rounded-start" placeholder="ایمیل خود را وارد کنید..." />
                    <button class="btn btn-warning rounded-end px-4" type="submit">عضویت</button>
                </form>
            </div>
        </div>
    </section>
}

<style>
    .service-card {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        border: 1px solid #ddd;
        background: white;
    }

        .service-card:hover {
            transform: translateY(-5px);
            box-shadow: 0px 4px 15px rgba(0, 0, 0, 0.1);
        }

    .service-image img {
        max-width: 100%;
        height: 100px;
        object-fit: cover;
    }

    .newsletter {
        background: linear-gradient(to right, #03343b, #005f6b);
    }

    .newsletter-form input {
        border: none;
        padding: 10px;
        font-size: 1rem;
    }

    .newsletter-form button {
        font-size: 1rem;
        font-weight: bold;
    }
</style>