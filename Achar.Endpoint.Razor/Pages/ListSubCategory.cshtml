@page
@model Achar.Endpoint.Razor.Pages.ListSubCategoryModel
@{
}

<section class="gray py-5">
    <div class="container">
        <div class="row">
            <div class="col-12" id="hotels" style="padding-left: 0;">
                <div class="row justify-content-center gx-3 gy-4">
                    @foreach (var subcategory in Model.SubCategories)
                    {
                        <div class="col-xl-3 col-lg-4 col-md-4 col-sm-6 col-6">
                            <div class="cats-wrap text-center shadow-lg rounded p-4 bg-white position-relative transition-all hover-shadow-lg h-60">
                                <a href="/ListHomeService?subcategory=@subcategory.Id" class="Goodup-catg-wrap d-block text-decoration-none">
                                    <div class="Goodup-sng-menu-thumb mb-4">
                                        @if (!string.IsNullOrEmpty(subcategory.Image))
                                        {
                                            <img src="@subcategory.Image" class="img-fluid rounded-circle border border-2 border-primary" alt="Category Image" style="width: 100px; height: 100px; object-fit: cover; transition: transform 0.3s;">
                                        }
                                        else
                                        {
                                            <div class="d-flex align-items-center justify-content-center bg-light rounded-circle" style="width: 100px; height: 100px;">
                                                <i class="fas fa-image text-secondary fs-2"></i>
                                            </div>
                                        }
                                    </div>
                                    <div class="Goodup-catg-caption">
                                        <h5 class="fs-md mb-2 text-dark fw-bold">@subcategory.Title</h5>
                                        <p class="mb-0 text-muted small">📂 دسته بندی: @subcategory.CategoryName</p>
                                    </div>
                                </a>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</section>



<style>
    .hover-shadow-lg {
        transition: all 0.3s ease-in-out;
    }

        .hover-shadow-lg:hover {
            box-shadow: 0px 10px 30px rgba(0, 0, 0, 0.15) !important;
            transform: translateY(-5px);
        }

    .Goodup-sng-menu-thumb img {
        transition: transform 0.3s ease-in-out;
    }

        .Goodup-sng-menu-thumb img:hover {
            transform: scale(1.1);
        }

    .cats-wrap {
        height: 100%;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
    }

    .Goodup-catg-caption {
        flex-grow: 1;
        display: flex;
        flex-direction: column;
        justify-content: center;
    }
</style>